<h1>Books</h1>
<% @books.each do |book| %>
  <p>Title</p>
  <span><%= book.title %></span>
  <p>Body</p>
  <span><%= book.body %><%= link_to "show", book_path(book.id) %></span>
  <%= link_to "Edit" ,edit_book_path(book.id)  %>
  <%= link_to "Destroy" ,book_path(book.id),method: :delete, "data-confirm" => "Are you sure ?"  %>
<% end %>




